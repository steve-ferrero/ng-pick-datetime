{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [ "es2015", "dom" ],
    "noImplicitAny": true,
    "allowJs": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "types": [
    // add node as an option
    "node"
  ],
  // typeRoots option has been previously configured
  "typeRoots": [
    // add path to @types
    "node_modules/@types"
  ],
  "exclude": [
    "node_modules/*",
    "**/*-aot.ts",
    "aot",
    "dist",
    "npmdist"
  ]
}
